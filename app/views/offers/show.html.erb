<div class="container">
  <div class="row">
    <div class="btn-style">
      <hr>
      <%= link_to offers_path do %>
      <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
      <% end %>
    </div>
  </div>

  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <% if @offer.photo.key %>
        <%= cl_image_tag @offer.photo.key, width: 200, height: 200, crop: :fill %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <p><%= link_to "Edit", edit_offer_path(@offer), class: 'btn-edit' %></p>
          <h2 class="card-title"><%= @offer.title %></h2>
          <h5 class="card-title"><%=@offer.price%>â‚¬/day</h5>
          <p class="card-text"><%=@offer.content%></p>

          <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>

          <%= render 'reservations/partials/form', offer: @offer, reservation: @reservation %>
          <p><%= link_to 'Delete', offer_path(@offer),
            data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>

        </div>
      </div>
    </div>
  </div>

</div>
