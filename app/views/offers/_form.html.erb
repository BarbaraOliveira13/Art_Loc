<%= simple_form_for offer, html: {data: {turbo: false}} do |f| %>
  <%= f.input :title %>
  <%= f.input :category, collection: ["Peintures", "Sculptures", "Livres", "Photographies"] %>
  <%= f.input :content %>
  <%= f.input :photo, as: :file %>
  <%= f.input :price %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
